<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_menuicon_cart"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView_menuicon_cart"
        android:orientation="vertical"
        android:id="@+id/linearLayout_listview_cart">


        <TextView
            android:id="@+id/textView_where_cart"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:textColor="#AAAAAA"
            android:text="테스트"
            />

        <TextView
            android:id="@+id/textView_menuname_cart"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="테스트"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_count_cart"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="테스트"
                />

            <TextView
                android:id="@+id/textView_weight_cart"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="테스트"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_price_cart"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="테스트"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_cart"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_toRightOf="@+id/linearLayout_listview_cart"
        android:background="@drawable/shape_circle_color"
        android:focusable="false"
        android:clickable="false"
        />



</RelativeLayout>