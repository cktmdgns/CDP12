<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_menuicon_goods"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView_menuicon_goods"
        android:orientation="vertical"
        android:id="@+id/linearLayout_listview_goods">



        <TextView
            android:id="@+id/textView_menuname_goods"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="테스트"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_weight_goods"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="테스트"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_price_goods"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="테스트"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageButton_addcart_goods"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_circle_color"

        android:scaleType="centerCrop"
        android:padding="10sp"
        android:adjustViewBounds="true"
        />

    <ImageView
        android:id="@+id/imageButton_search_goods"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle_color"

        android:scaleType="centerCrop"
        android:padding="10sp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/imageButton_addcart_goods"
        android:layout_alignStart="@+id/imageButton_addcart_goods" />



</RelativeLayout>