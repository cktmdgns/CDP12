<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobilelecture.cdp12_app.GoodsSearchActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#FF5000">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <Spinner
                    android:layout_width="283dp"
                    android:layout_height="30dp"
                    android:id="@+id/spinner_goodsSearch"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <EditText
                    android:layout_width="285dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/editText_goodsSearch"
                    android:textSize="13dp"
                    android:textColor="#AAAAAA"
                    android:hint="물품 검색"
                    android:background="@drawable/shape_circle"
                    />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:background="#FF5000"
                    android:src="@drawable/glass_con"
                    android:scaleType="centerCrop"
                    android:padding="0sp"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageButton_goodsSearch"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:text="   물품검색"
                android:textSize="15dp"
                android:id="@+id/textView_goodsSearch"
                android:background="#CCCCCC"
                />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listView_goodsSearch" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
